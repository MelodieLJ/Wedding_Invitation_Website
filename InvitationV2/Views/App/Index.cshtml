<!-- Counter -->
<section class="counter">
    <div class="container">
        <div class="row text-center individual">
            <div class="col-3 wow tada">
                <img src="~/img/gryffindor-shield.jpg">
                <br />
                <h1 id="days"></h1>
                <h5>Days</h5>
            </div>
            <div class="col-3 wow tada">
                <img src="~/img/Slytherin.jpg">
                <br />
                <h1 id="hours"></h1>
                <h5>Hours</h5>
            </div>
            <div class="col-3 wow tada">
                <img src="~/img/Hufflepuff.jpg">
                <br />
                <h1 id="minutes"></h1>
                <h5>Minutes</h5>
            </div>
            <div class="col-3 wow tada">
                <img src="~/img/Ravenclaw.jpg">
                <br />
                <h1 id="seconds"></h1>
                <h5>Seconds</h5>
            </div>
        </div>
        <div class="row text-center allInOne">
            <div class="col-12 wow tada">
                <img src="~/img/count-number-bg.png">
                <h1 style="margin-top:100px;" id="all"></h1>
                <h1 style="margin-top:115px;">D : H : M : S</h1>
            </div>
        </div>
    </div>
</section>


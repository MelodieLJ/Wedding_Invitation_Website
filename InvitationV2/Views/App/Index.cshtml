<script>
    function initMap() {
        var location = { lat: -36.846408, lng: 174.763178 };
        var map = new google.maps.Map(document.getElementById("map"), {
            zoom: 18,
            center: location
        });
        var marker = new google.maps.Marker({
            position: location,
            map: map
        });
    }
